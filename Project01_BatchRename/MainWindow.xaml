<Window x:Class="Project01_BatchRename.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project01_BatchRename"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="800" Loaded="Window_Loaded">
    <StackPanel
        Orientation="Horizontal"
        Background="GreenYellow">
        <StackPanel>
            <TextBox Width="300" Height="200"
                 Text="JackandOggyhavesExoNYouTubeandNeTFlitxwithYOuTUbEKIDonYouTUBE"
                 Background="AliceBlue"
                 Name="srcFileName"
                 Margin="10"
                 TextWrapping="Wrap"/>
            <StackPanel
                Orientation="Horizontal" Margin="10">
                <Label Content="oldPattern" Width="100"/>
                <TextBox Name="txtPattern" Text="youtube" Width="100"/>
            </StackPanel>

            <StackPanel
                Orientation="Horizontal" Margin="10">
                <Label Content="new Pattern" Width="100"/>
                <TextBox Name="txtNewPattern" Text="---replaced---" Width="100"/>
            </StackPanel>


        </StackPanel>

        <StackPanel>
            <Button Width="100" Height="30" Margin="10" 
                    Content="Replace!" FontWeight="Bold"
                    Name="replaceFileNameButton"
                    Click="ReplaceFileNameButton_Click"/>
            <Button Width="100" Height="30" Margin="10" 
                    Content="New Case!" FontWeight="Bold"
                    Name="createNewCaseButton" Click="CreateNewCaseButton_Click"/>
            <Button Width="100" Height="30" Margin="10" 
                    Content="Normalize!" FontWeight="Bold"
                    Name="normalizeFileNameButton" Click="NormalizeFileNameButton_Click"/>
            <Button Width="100" Height="30" Margin="10" 
                    Content="Move!" FontWeight="Bold"
                    Name="moveFileNameButton" Click="MoveFileNameButton_Click"/>
            <Button Width="100" Height="30" Margin="10" 
                    Content="Generate GUID!" FontWeight="Bold"
                    Name="createGUIDNameButton"
                    Click="CreateGUIDNameButton_Click"/>

        </StackPanel>

        <StackPanel>
            <TextBox Width="300" Height="200"
                 Background="AliceBlue"
                 Name="desFileName"
                 Margin="10"
                 Text="new file name appear here!!!"
                 TextWrapping="Wrap"/>
            <Border Canvas.Left="550" Canvas.Top="350.6" BorderBrush="#FF007ACC" BorderThickness="1">
                <Canvas Height="70" Canvas.Left="227.2" Canvas.Top="350.6" Width="298">
                    <Label Content="Move" VerticalAlignment="Top" Margin="4,0,0,0" HorizontalAlignment="Left" Padding="0"
                        Height="auto" Width="auto" FontWeight="Bold" TextOptions.TextFormattingMode="Display" Foreground="Red" FontSize="14" />
                    <TextBlock Text="Number of characters" Canvas.Top="24" Canvas.Left="4"/>
                    <TextBox x:Name="txtBoxMoveNumChars" Text="7" TextWrapping="NoWrap" Width="60" Background="White" Canvas.Left="124" Canvas.Top="24" Height="16" Padding="0,-1,0,0"/>
                    <RadioButton x:Name="moveRadioToFront" Content="To Front" Canvas.Left="196" Canvas.Top="24" GroupName="MoveOptions" ToolTip="Move characters at last to front"/>
                    <RadioButton x:Name="moveRadioToLast" Content="To Last" Canvas.Left="196" Canvas.Top="47" GroupName="MoveOptions" ToolTip="Move characters at front to last"/>
                    <CheckBox x:Name="moveISBNCheckBox" Content="ISBN style" Canvas.Left="10" Canvas.Top="47" Height="15"
                              ToolTip="Characters to move must include the space between ISBN and book's name"/>
                </Canvas>
            </Border>
        </StackPanel>

    </StackPanel>
</Window>
