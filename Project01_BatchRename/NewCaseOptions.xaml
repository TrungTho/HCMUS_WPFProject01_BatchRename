        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project01_BatchRename"
        mc:Ignorable="d"
        Title="New Case Options" Height="150" Width="200">
    <Canvas>
        <StackPanel Orientation="Vertical" Canvas.Top="10" Canvas.Left="10">
            <RadioButton x:Name="radioUpperCase" Content="UPPERCASE" Canvas.Left="26" Canvas.Top="22" Checked="RadioUpperCase_Checked"/>
            <RadioButton Content="RadioButton"/>
            <RadioButton Content="RadioButton"/>

        </StackPanel>
        
    </Canvas>
</Window>
